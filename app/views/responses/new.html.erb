<div class="row">
	<div class="col-xs-7">
		<h1 style="text-align:center;border:solid black 3px"><%= @question.text.html_safe %></h1>

		<div class="question_info">
			<a class="seconds">0
			</a>
			<a class="question_stats">
			<%= @question.start_difficulty%> << Difficulty
			</a>
		</div>

		<script>
			var ticker = 0 
			setInterval(function(){
				ticker+=1;
				$('.seconds').text("seconds >>  " + (ticker / 100));
				}
			,10);
		</script>

		<%= form_for [@question, @response] do |form| %>
			<%= form.text_field :answer, value: '', class: 'answer_box', autofocus: true, autocomplete: 'off' %>
			<br>
			<div class="row">
				<div class="col-xs-6", style="text-align:left">
					<%= form.submit 'Submit (or pass)',class: 'response_button', style: "background-color:black;color:white"%>
				</div>
				<div class="col-xs-6", style="text-align:right">
					<%= form.submit 'Make it easier', class: 'response_button', style: "background-color:pink"%>
					<%= form.submit 'Make it harder', class: 'response_button', style: "background-color:red" %>
				</div>
			</div>
		<% end %>
	</div>


	<div class="col-xs-5" style="vertical-align:middle">
		<br>
		<h5> User: <%= current_user.email%> </h5>
		<h5> Score: <%= current_user.get_rating %> </h5>
		<h5> Accuracy: <%= current_user.correct_answers%> / <%=current_user.questions_answered %> </h5>
		<h5> Avg speed: HOLD </h5>
		<h5> Speed Rating: HOLD</h5>

	</div>
</div>

<br>



<% if @last_response == nil %>
	<h2 style="color:red;text-align:center">Welcome to your first question!</h2>

<% else %>
	<div class="row">
		<div class="col-xs-7", style="text-align:center">
			<h4 id="previousOutcome" onchange="checkOutcome();">You were <%= @last_response.outcome%></h4>
			<div class="row" id="last_response" style="text-align:center">
				<div class="col-xs-4"><h5>Question:</h5><h2><%= @last_question.text.html_safe %> </h2></div>
				<div class="col-xs-4"><h5>Correct answer:</h5><h2><%= @last_question.answer %></h2></div>
				<div class="col-xs-4"><h5>Your time:</h5><h2><%= @last_response.time / 1000%>s</h2></div>
			</div>
		</div>
		<div class="col-xs-5". style="text-align:center">
			<h4>Actions</h4>
			<h5>Query Answer</h5>
			<h5>Post to twitter</h5>
			<h5>Post to facebook</h5>
		</div>
	</div>
<% end %>

		<script>
			function checkOutcome() {
				var inputVal = document.getElementById("previousOutcome").innerHTML; 
				if (inputVal == "You were correct") {
				// document.getElementById("previousOutcome").style.backgroundColor = "green";
				// document.getElementById("arbitrary1").style.backgroundColor = "green";
				$('#last_response').addClass('correct')
    			}
    			else if (inputVal == "You were incorrect") {
    			$('#last_response').addClass('incorrect')
    			}
    		}
			checkOutcome();
		</script>



		
